local Player = game:GetService("Players").LocalPlayer

if not game:GetService("BadgeService"):UserHasBadgeAsync(Player.UserId, 2356987810495064) then
    for i,v in pairs(game:GetService("Players").LocalPlayer.PlayerGui:GetDescendants()) do
        if v.ClassName == "ScreenGui" then
            v:Remove()
          end
        end
    
    game:GetService("Players").LocalPlayer:Kick("Play my game called Bloxy S (link in my latest video's description) for 15 minutes!")
end
